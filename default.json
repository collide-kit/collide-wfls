{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automergeStrategy": "squash",
  "commitMessageAction": "update",
  "commitMessagePrefix": "ðŸ§© chore(deps):",
  "dependencyDashboardAutoclose": true,
  "dependencyDashboardOSVVulnerabilitySummary": "unresolved",
  "dependencyDashboardTitle": "ðŸ”„ Dependency Dashboard",
  "description": ["ðŸ¤– Collide Tech default Renovate preset"],
  "extends": [
    "config:recommended",
    "schedule:weekly",
    "group:allNonMajor"
  ],
  "labels": ["dependencies"],
  "minimumReleaseAge": "3 days",
  "packageRules": [
    {
      "description": "Disable peer dependency updates",
      "matchDepTypes": ["peerDependencies"],
      "enabled": false
    },
    {
      "description": "Automerge patch devDependencies",
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["patch"],
      "automerge": true
    },
    {
      "description": "Add major label to breaking updates",
      "matchUpdateTypes": ["major"],
      "labels": ["dependencies", "major"]
    }
  ],
  "platformAutomerge": true,
  "rangeStrategy": "bump",
  "semanticCommits": "disabled",
  "timezone": "Europe/Zurich",
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["dependencies", "security"]
  }
}
